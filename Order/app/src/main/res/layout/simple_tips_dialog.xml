<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:paddingTop="18dp"
            android:textColor="@color/result_view"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/result_view"
            android:textSize="@dimen/font_14" 
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/size_18"
            android:background="#dcdcdc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_button_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/leftbottom_round_drawable"
            android:gravity="center"
            android:text="@string/cancels"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <Button
            android:id="@+id/dialog_sure_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rightbottom_round_drawable"
            android:gravity="center"
            android:text="@string/main_sures"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/single_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/single_sure_bt"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/onebottom_round_drawable"
            android:gravity="center"
            android:textColor="#1fa709"
            android:textSize="@dimen/font_19" />
    </LinearLayout>

</LinearLayout>