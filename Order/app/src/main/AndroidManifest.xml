<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cesaas.android.order">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".global.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.user.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.order.OrderCenterActivity">
        </activity>
        <activity
            android:name=".activity.scan.ZBarScanActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".activity.order.StatementActivity">
        </activity>
        <activity android:name=".activity.order.WaitPayOrderDetailActivity">
        </activity>
        <activity android:name=".activity.order.AccountDetailActivity">
        </activity>
        <activity android:name=".activity.pay.PayActivity"/>
        <activity android:name=".activity.pay.CreatePayActivity"/>
        <activity android:name=".activity.pay.ShopListActivity"/>
        <activity android:name=".activity.pay.PayListActivity"/>
        <activity android:name=".activity.user.UserListActivity"/>

    </application>

</manifest>